<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
<filter>
    <filter-name>FilerDemo01</filter-name>
    <filter-class>com.itheima.filter.FilterDemo01</filter-class>
    <init-param>
        <param-name>akey</param-name>
        <param-value>aaa</param-value>
    </init-param>
</filter>
    <filter-mapping>
        <filter-name>FilerDemo01</filter-name>
        <url-pattern>/filter01</url-pattern>
    </filter-mapping>
    <listener>
        <!-- 全限定名(带包名) -->
        <listener-class>com.itheima.listener.ServletContextLis</listener-class>
    </listener>
</web-app>
